<!DOCTYPE html>
<html>
<head>
      <title>Editing Product</title>
</head>
<body>
      <div class="container">
            <h1>Editing Product</h1>

            <div class="row">
                  <form action='/update' method='post'>
                  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
                  <input type="hidden" name="id" value="<%= @product['id'] %>">

                        <div class="form-group">
                              <label for="p_name">Name:</label>
                              <input type="text" class="form-control" id="p_name" name="p_name" value="<%= @product['name'] %>">
                        </div>
                        <div class="form-group">
                              <label for="p_description">Description:</label>
                              <input type="text" class="form-control" id="p_description" name="p_description" value="<%= @product['description'] %>">
                        </div>

                        <div class="form-group">
                              <label for="p_price">Price:</label>
                              <input type="text" class="form-control" id="p_price" name="p_price" value="<%= @product['pricing'] %>">
                              <button type="submit" class="btn btn-default">Update</button>
                        </div>
                        <a href="/products/<%= @product['id'] %>" class= 'btn btn-default'>Show</a> | <a href="/" class="btn btn-default">Back</a>
                  </form>
            </div>
      </div>
</body>
</html>
